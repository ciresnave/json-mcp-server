{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build JSON MCP Server",
			"type": "shell",
			"command": "cargo",
			"args": [
				"build",
				"--release"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "Run JSON MCP Server",
			"type": "shell",
			"command": "cargo",
			"args": [
				"run"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Test JSON MCP Server",
			"type": "shell",
			"command": "cargo",
			"args": [
				"test"
			],
			"group": "test",
			"isBackground": false,
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "Check JSON MCP Server",
			"type": "shell",
			"command": "cargo",
			"args": [
				"check"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$rustc"
			]
		}
	]
}